all:
	z++ -std=c++20 -stdlib=libc++ -fmodules -fbuiltin-module-map -fmodules-ts -emit-module-interface -c split.cpp -o split.pcm
	#-Xclang doesnt work with z++
	z++ -std=c++20 -stdlib=libc++ -fmodules -fbuiltin-module-map -c split.cpp
	z++ -std=c++20 -stdlib=libc++ -fmodules -fbuiltin-module-map -fprebuilt-module-path=. -c main.cpp
	z++ -std=c++20 -stdlib=libc++ -fmodules -fbuiltin-module-map main.obj split.obj -o main

alternate:
	z++ -std=c++20 -fmodules -Xclang -emit-module-interface -c split.cpp -o split.pcm
	z++ -std=c++20 -fmodules -c split.cpp
	z++ -std=c++20 -fmodules -fprebuilt-module-path=. -c main.cpp
	z++ -std=c++20 -fmodules  main.obj split.obj -o main.exe
